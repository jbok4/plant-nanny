<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="card-image">
          <%= image_tag("random/#{rand(10)}.jpg", class: "img-responsive") %>

          <span class="card-title">
          <%= link_to plant.name, plant_path(plant) %>
          </span>
        </div>

        <div class="card-content">
          <%= plant.fun_fact %>
        </div>

        <div class="card-action">
          <i class="fa fa-info"></i>
          <%= link_to "View Details", plant_path(plant) %>
          <i class="fa fa-pencil-square-o text-xs-right"></i>
          <%= link_to "Leave Tip", new_plant_tip_path(plant) %>
        </div>
      </div>
    </div>
  </div>
</div>
