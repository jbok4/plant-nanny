<div class="card">
  <div class="card-image">
    <%= image_tag("random/#{rand(14)}.jpg", class: "img-responsive") %>

    <span class="card-title">
    <%= link_to plant.name, plant_path(plant) %>
    </span>
  </div>

  <div class="card-content">
    <%= truncate(plant.fun_fact, :length => 25, :seperator => ' ') %>
  </div>

  <div class="card-action">
    <i class="fa fa-info"></i>
    <%= link_to "View Details", plant_path(plant) %>
    <i class="fa fa-pencil-square-o text-xs-right"></i>
    <%= link_to "Leave Tip", new_plant_tip_path(plant) %>
  </div>
</div>
